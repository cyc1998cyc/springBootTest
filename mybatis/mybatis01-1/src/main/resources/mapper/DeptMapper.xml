<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.dao.DeptDao">

    <resultMap id="deptMap" type="com.chen.entity.Dept">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <collection property="employees" javaType="list" ofType="com.chen.entity.Employee"  column="id" select="com.chen.dao.EmployeeDao.selectByDid"></collection>
    </resultMap>

    <sql id="sql">
        id,name
    </sql>


    <select id="selectAll" resultMap="deptMap">
        select <include refid="sql"></include> from dept
    </select>
    <select id="selectById" resultMap="deptMap">
        select <include refid="sql"></include>
        from dept
        where id = #{id}
    </select>


</mapper>