<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.dao.EmployeeDao">

    <resultMap id="employee" type="com.chen.entity.Employee">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="did" property="dId"></result>
        <association property="dept" column="did" javaType="com.chen.entity.Dept" select="com.chen.dao.DeptDao.selectById"></association>
    </resultMap>

    <resultMap id="employee3" type="com.chen.entity.Employee">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="did" property="dId"></result>
    </resultMap>

    <resultMap id="employee2" type="com.chen.entity.Employee">
        <id column="eid" property="id"></id>
        <result column="ename" property="name"></result>
        <association property="dept" javaType="com.chen.entity.Dept">
            <id column="did" property="id"></id>
            <result column="dname" property="name"></result>
        </association>
    </resultMap>

    <sql id="sql">
        `id`,`name`,`did`
    </sql>


    <select id="selectAll" resultMap="employee">
        select <include refid="sql"></include>
        from employee
    </select>


    <select id="selectInfo" resultMap="employee2">
        select e.id,e.name,e.did,d.name dname
        from
        employee e
        left join
        dept d
        on
        e.did = d.id
    </select>

    <select id="select2" resultMap="employee2">
        select e.id eid,e.name ename,d.id did,d.name dname
        from
        employee e
        left join
        dept d
        on d.id = e.did
    </select>

    <select id="selectByDid">
        select <include refid="sql"></include>
        from employee
        where
        did = #{dId}
    </select>
</mapper>